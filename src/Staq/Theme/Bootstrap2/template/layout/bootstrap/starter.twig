{% extends "layout/bootstrap/base.twig" %}

{% block stylesheets %}
    {{ parent( ) }}
    <link rel="stylesheet" href="{{ 'css/bootstrap-layout-starter.css'|public }}">
{% endblock %}

{% block contentWrapper %}    
    {% block navbar %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    {% block navbar_name %}
                    <a href="{{ public( '/' ) }}" class="brand">Project name</a>
                    {% endblock %}
                    <div class="nav-collapse collapse">
                        <p class="navbar-text pull-right">
                            {% block navbar_right %}
                                Logged in as <a href="#" class="navbar-link">Username</a>
                            {% endblock %}
                        </p>
                        <ul class="nav">
                            {% block navbar_left %}
                            <li class="active"><a href="{{ '/'|public }}">Home</a></li>
                            <li><a href="{{ route( 'Error', 'view', '404' ) }}">404</a></li>
                            {% endblock %}
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
    {% endblock %}
    
    <div class="container">
        {% block content %}
            <h1>Bootstrap starter template</h1>
        
            <p>Use this document as a way to quick start any new project.<br> All you get is this message and a barebones HTML
                document.</p>
        {% endblock %}
    </div>
{% endblock %}